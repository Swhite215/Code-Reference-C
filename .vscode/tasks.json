{
    // See https://go.microsoft.com/fwlink/?LinkId=733558
    // for the documentation about the tasks.json format
    "version": "2.0.0",
    "tasks": [
      {
        "label": "clang build active file",
        "type": "shell",
        "command": "/usr/bin/clang",
        "args": [
          "-g",
          "${file}",
          "-o",
          "${fileDirname}/${fileBasenameNoExtension}"
        ],
        "options": {
          "cwd": "${workspaceFolder}"
        },
        "problemMatcher": [],
        "group": "build",
        "presentation": {
          "reveal": "silent"
        }
      },
      {
        "type": "shell",
        "label": "clang++ build active file",
        "command": "/usr/bin/clang++",
        "args": [
          "-std=c++17",
          "-stdlib=libc++",
          "-g",
          "${file}",
          "-o",
          "${fileDirname}/${fileBasenameNoExtension}"
        ],
        "options": {
          "cwd": "${workspaceFolder}"
        },
        "problemMatcher": [
          "$gcc"
        ],
        "group": {
          "kind": "build",
          "isDefault": true
        }
      },
      {
        "type": "shell",
        "label": "clang++ build project example-project",
        "command": "/usr/bin/clang++",
        "args": [
          "-g",
          "${fileDirname}/address.cpp",
          "${fileDirname}/userfile.cpp",
          "-o",
          "${fileDirname}/${fileBasenameNoExtension}"
        ],
        "options": {
          "cwd": "${workspaceFolder}"
        },
        "problemMatcher": [
          "$gcc"
        ],
        "group": {
          "kind": "build",
          "isDefault": true
        }
      },
      {
        "type": "shell",
        "label": "clang++ build spencerwhite_publishedbook",
        "command": "/usr/bin/clang++",
        "args": [
          "-g",
          "${fileDirname}/Author.cpp",
          "${fileDirname}/Publisher.cpp",
          "${fileDirname}/Book.cpp",
          "${fileDirname}/main.cpp",
          "-o",
          "${fileDirname}/${fileBasenameNoExtension}"
        ],
        "options": {
          "cwd": "${workspaceFolder}"
        },
        "problemMatcher": [
          "$gcc"
        ],
        "group": {
          "kind": "build",
          "isDefault": true
        }
      },
      {
        "type": "shell",
        "label": "clang++ build spencerwhite_pizza",
        "command": "/usr/bin/clang++",
        "args": [
          "-g",
          "${fileDirname}/Pizza.cpp",
          "${fileDirname}/Order.cpp",
          "${fileDirname}/main.cpp",
          "-o",
          "${fileDirname}/${fileBasenameNoExtension}"
        ],
        "options": {
          "cwd": "${workspaceFolder}"
        },
        "problemMatcher": [
          "$gcc"
        ],
        "group": {
          "kind": "build",
          "isDefault": true
        }
      }
    ]
}